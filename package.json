{
  "name": "@twipped/utils",
  "version": "7.0.0",
  "description": "A collection of commonly used utility functions",
  "type": "module",
  "main": "./index.js",
  "exports": {
    ".": "./index.js",
    "./*": "./src/*.js"
  },
  "scripts": {
    "test": "tap -R base --no-coverage tests",
    "cover": "tap -R terse --coverage tests",
    "lint": "eslint './{src,tests}/**/*.{js,jsx}'",
    "lint-fix": "eslint './{src,tests}/**/*.{js,jsx}' --fix",
    "docs": "jsdoc2md -t README.hbs src/*.js > README.md",
  },
  "engines": {
    "node": ">=14.10.0"
  },
  "author": "Jocelyn Badgley <joc@twipped.com> (http://twipped.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/Twipped/js-utils"
  },
  "devDependencies": {
    "eslint": "^8.23.0",
    "eslint-config-twipped": "^7.2.0",
    "jsdoc": "^3.6.11",
    "jsdoc-to-markdown": "~7.1.1",
    "pretty-format": "^29.0.1",
    "tap": "^16.3.0"
  },
  "files": [
    "src",
    "index.js",
    "CHANGELOG.md",
    "LICENSE.txt",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  "eslintConfig": {
    "extends": [
      "twipped/node-esm"
    ],
    "rules": {
      "jsdoc/require-jsdoc": "warn",
      "one-var": "off"
    },
    "overrides": [
      {
        "files": [
          "./src/dom.js"
        ],
        "extends": "twipped/browser"
      },
      {
        "files": [
          "./tests/*"
        ],
        "extends": "twipped/node-esm"
      }
    ]
  }
}
